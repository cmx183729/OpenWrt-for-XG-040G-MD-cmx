/dts-v1/;

#include <dt-bindings/leds/common.h>
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include "an7581-nowifi.dtsi"

/ {
	model = "Nokia Bell XG-040G-MD";
	compatible = "bell,xg-040g-md", "airoha,an7581";

	efuse-banks {
		compatible = "airoha,an7581-efuses";
		#address-cells = <0x01>;
		#size-cells = <0x00>;

		bank@0 {
			reg = <0x00>;
		};

		bank@1 {
			reg = <0x01>;
		};
	};

	aliases {
		serial0 = &uart1;
	};

	chosen {
		bootargs = "console=ttyS0,115200n8 loglevel=7  earlycon";
		stdout-path = "serial0:115200n8";
		bootargs-append = " ubi.mtd=rootfs,2048 rootfstype=squashfs loglevel=8 ubi.block=0,rootfs ro init=/etc/preinit";
	};

	memory@80000000 {
		device_type = "memory";
		/* 已修正：将作者的 8GB 报错值改为真实的 512MB 物理内存 */
		reg = <0x0 0x80000000 0x0 0x20000000>;
	};

	leds {
		compatible = "gpio-leds";

		led-0 {
			label = "pwr";
			color = <0x01>;
			function = "power";
			/* 已修正：0x24 还原为控制器指针，0x11 还原为 17 脚 */
			gpios = <&en7581_pinctrl 17 GPIO_ACTIVE_LOW>;
			default-state = "on";
		};

		led-2 {
			label = "pon";
			color = <0x02>;
			function = "status";
			/* 已修正：0x13 还原为 19 脚 */
			gpios = <&en7581_pinctrl 19 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-3 {
			label = "internet";
			color = <0x02>;
			function = "status";
			/* 已修正：0x14 还原为 20 脚 */
			gpios = <&en7581_pinctrl 20 GPIO_ACTIVE_LOW>;
			default-state = "on";
		};
	};
};

&en7581_pinctrl {
	gpio-ranges = <&en7581_pinctrl 0 13 47>;

	mdio_pins: mdio-pins {
		mux {
			function = "mdio";
			groups = "mdio";
		};

		conf {
			pins = "gpio2";
			output-high;
		};
	};

	pcie0_rst_pins: pcie0-rst-pins {
		conf {
			pins = "pcie_reset0";
			drive-open-drain = <1>;
		};
	};

	pcie1_rst_pins: pcie1-rst-pins {
		conf {
			pins = "pcie_reset1";
			drive-open-drain = <1>;
		};
	};

	gswp1_led0_pins: gswp1-led0-pins {
		mux {
			function = "phy1_led0";
			pins = "gpio33";
		};
	};

	gswp2_led0_pins: gswp2-led0-pins {
		mux {
			function = "phy2_led0";
			pins = "gpio34";
		};
	};

	gswp3_led0_pins: gswp3-led0-pins {
		mux {
			function = "phy3_led0";
			pins = "gpio35";
		};
	};

	gswp4_led0_pins: gswp4-led0-pins {
		mux {
			function = "phy4_led0";
			pins = "gpio42";
		};
	};
};

&snfi {
	status = "okay";
};

&spi_nand {
	#address-cells = <1>;
	#size-cells = <1>;
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		partition@0 {
			label = "bootloader";
			reg = <0x0  0x00080000>;
			read-only;
		};

		partition@80000  {
			label = "env";
			reg = <0x00080000 0x00080000>;
		};

		partition@100000 {
			label = "ubi";
			reg = <0x00100000  0x00>;
			ubi-reserved-pebs = <100>;
		};
	};
};

&usb0 {
	status = "okay";
};

&usb1 {
	status = "okay";
	/* 关键修改：去除 3.0 屏蔽，直接启用 USB3 物理层满血速率 */
	phys = <&usb1_phy PHY_TYPE_USB3>;
};

&i2c0 {
	status = "okay";
};

&npu {
	status = "okay";
};

&eth {
	status = "okay";
};

&gdm1 {
	status = "okay";
};

&gdm4 {
	status = "okay";
	phy-handle = <&phy15>;
	phy-mode = "2500base-x";
	/* 保持原作者的 lan1 命名 */
	label = "lan1";
};

&switch {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&mdio_pins>;

	mdio {
		phy15: ethernet-phy@f {
			/* EN8811H PHY ID */
			compatible = "ethernet-phy-id03a2.a411";
			reg = <15>;

			interrupt-parent = <&gic>;
			reset-gpios = <&en7581_pinctrl 31 GPIO_ACTIVE_LOW>;
			reset-assert-us = <10000>;
			reset-deassert-us = <2000000>;
			phy-mode = "2500base-x";
		};
	};
};

/* --- 以下完全遵循作者采用的外部引用节点写法 --- */

&gsw_port2 {
	status = "okay";
	label = "lan2";
};

&gsw_phy2 {
	pinctrl-names = "gbe-led";
	pinctrl-0 = <&gswp2_led0_pins>;
	status = "okay";
};

&gsw_phy2_led0 {
	status = "okay";
	active-low;
};

&gsw_port3 {
	status = "okay";
	label = "lan3";
};

&gsw_phy3 {
	pinctrl-names = "gbe-led";
	pinctrl-0 = <&gswp3_led0_pins>;
	status = "okay";
};

&gsw_phy3_led0 {
	status = "okay";
	active-low;
};

&gsw_port4 {
	status = "okay";
	label = "lan4";
};

&gsw_phy4 {
	pinctrl-names = "gbe-led";
	pinctrl-0 = <&gswp4_led0_pins>;
	status = "okay";
};

&gsw_phy4_led0 {
	color = <LED_COLOR_ID_GREEN>;
	function = LED_FUNCTION_WAN;
	default-state = "keep";
	status = "okay";
	active-low;
};

